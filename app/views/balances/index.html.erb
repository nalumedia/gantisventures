<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
<h1>Balances</h1>

<table class="table">
  <thead>
    <tr>
    <th>ID</th>
    <th>Date</th>
      <th>Name</th>
      <th>Account ID</th>
      <th>Account</th>
      <th>Amount</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
      
      <td><%= balance.created_at.to_formatted_s(:short) %></td>
      <td><%= balance.id %></td>  
      <td><%= balance.name %></td>
        <td><%= balance.account_id %></td>
        <td><%= balance.account.try(:nameLstring) %></td>
        <td><%= number_to_currency(balance.amount) %></td>
        <td><%= balance.notes %></td>
        <td><%= link_to 'Show', balance %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Balance', new_balance_path %>

<%= line_chart @balances.group_by_day(:created_at).sum(:amount) %>

<br>



<% else %>
<p>sorry, not signed in</p>
<% end %> 