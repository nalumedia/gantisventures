<p id="notice"><%= notice %></p>
<% if user_signed_in? %>

<h1>Moves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Notes</th>
      <th>Account From</th>
      <th>Account To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= number_to_currency(move.amount) %></td>
        <td><%= move.notes %></td>
        <td><%= move.account.try(:nameLstring) %></td>
        <td><%= move.account.try(:nameLstring) %></td>
        <td><%= link_to 'Show', move %></td>
        <td><%= link_to 'Edit', edit_move_path(move) %></td>
        <td><%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Transaction', new_move_path, :class => "btn btn-primary"%>



<% else %>
<p>
Sorry you aren't logged in.</p>
<% end %>