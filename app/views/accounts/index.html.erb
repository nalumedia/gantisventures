<p id="notice"><%= notice %></p>
<% if user_signed_in? %>

<h1>Accounts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Namelstring</th>
      <th>Horizon</th>
      <th>Target exit</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.nameLstring %></td>
        <td><%= account.horizon %></td>
        <td><%= account.target_exit %></td>
        <td><%= account.notes %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>

<% else %>
<p>sorry, not signed in</p>
<% end %> 